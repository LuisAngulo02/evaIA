{% extends 'base.html' %}
{% load static %}

{% block title %}Reportes del Docente - Sistema de Evaluación{% endblock %}

{% block extra_css %}
<link rel="stylesheet" href="{% static 'css/dashboard.css' %}">
<link rel="stylesheet" href="{% static 'css/teacher-reports.css' %}">
{% endblock %}

{% block content %}
<div class="container-fluid reports-container">
    <!-- Header -->
    <div class="reports-header">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-2">
                    <i class="fas fa-chart-line me-3"></i>
                    Reportes y Analytics
                </h1>
                <p class="mb-0 opacity-90">
                    Análisis detallado del rendimiento de tus estudiantes
                </p>
            </div>
            <div class="col-md-4 text-md-end">
                <div class="export-buttons">
                    <button class="btn btn-danger btn-export" onclick="exportData('pdf')">
                        <i class="fas fa-download me-2"></i>Exportar Reporte PDF
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Estadísticas principales -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="stat-card primary">
                <div class="stat-icon">
                    <i class="fas fa-video"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">{{ stats.total_presentations }}</div>
                    <div class="stat-label">Presentaciones Totales</div>
                    <div class="stat-change text-success">
                        <i class="fas fa-check-circle"></i>
                        <span>{{ stats.graded_presentations }} calificadas</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="stat-card success">
                <div class="stat-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">{{ stats.average_score|floatformat:1 }}%</div>
                    <div class="stat-label">Promedio General</div>
                    <div class="stat-change text-info">
                        <i class="fas fa-robot"></i>
                        <span>IA: {{ stats.ai_average|floatformat:1 }}%</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="stat-card warning">
                <div class="stat-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">{{ stats.pending_grading }}</div>
                    <div class="stat-label">Por Calificar</div>
                    <div class="stat-change text-warning">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>Requieren atención</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="stat-card info">
                <div class="stat-icon">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">{{ stats.total_courses }}</div>
                    <div class="stat-label">Cursos Activos</div>
                    <div class="stat-change text-primary">
                        <i class="fas fa-tasks"></i>
                        <span>{{ stats.total_assignments }} asignaciones</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Panel principal -->
        <div class="col-lg-8">
            <!-- Rendimiento por curso -->
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2 text-primary"></i>
                        Rendimiento por Curso
                    </h5>
                </div>
                <div class="card-body">
                    {% if course_stats %}
                        {% for course_stat in course_stats %}
                        <div class="course-card">
                            <div class="course-header">
                                <div class="course-icon">
                                    <i class="fas fa-book"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">{{ course_stat.course.code }}</h6>
                                    <small class="text-muted">{{ course_stat.course.name }}</small>
                                </div>
                                <div class="ms-auto text-end">
                                    <div class="d-flex gap-3">
                                        <div class="text-center">
                                            <div class="fw-bold text-primary">{{ course_stat.presentations_count }}</div>
                                            <small class="text-muted">Presentaciones</small>
                                        </div>
                                        <div class="text-center">
                                            <div class="fw-bold text-success">{{ course_stat.average_score|floatformat:1 }}%</div>
                                            <small class="text-muted">Promedio</small>
                                        </div>
                                        <div class="text-center">
                                            {% if course_stat.pending_count > 0 %}
                                                <div class="fw-bold text-warning">{{ course_stat.pending_count }}</div>
                                                <small class="text-muted">Pendientes</small>
                                            {% else %}
                                                <div class="fw-bold text-success">
                                                    <i class="fas fa-check"></i>
                                                </div>
                                                <small class="text-muted">Al día</small>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="progress-wrapper">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="small text-muted">Progreso del curso</span>
                                    <span class="small fw-semibold">{{ course_stat.average_score|floatformat:1 }}%</span>
                                </div>
                                <div class="progress">
                                    {% if course_stat.average_score >= 85 %}
                                        <div class="progress-bar bg-success" style="width: {{ course_stat.average_score }}%"></div>
                                    {% elif course_stat.average_score >= 70 %}
                                        <div class="progress-bar bg-warning" style="width: {{ course_stat.average_score }}%"></div>
                                    {% else %}
                                        <div class="progress-bar bg-danger" style="width: {{ course_stat.average_score }}%"></div>
                                    {% endif %}
                                </div>
                                
                                <!-- Botón de exportación por curso -->
                                <div class="d-flex justify-content-end mt-3">
                                    <button class="btn btn-sm btn-outline-danger" 
                                            onclick="exportCourse({{ course_stat.course.id }}, 'pdf')"
                                            title="Exportar este curso a PDF">
                                        <i class="fas fa-download me-1"></i>Exportar PDF
                                    </button>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    {% else %}
                        <div class="empty-state">
                            <i class="fas fa-chart-bar"></i>
                            <h5>No hay datos disponibles</h5>
                            <p>Crea cursos y asignaciones para ver las estadísticas aquí.</p>
                            <a href="{% url 'presentations:create_course' %}" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Crear Primer Curso
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Panel lateral -->
        <div class="col-lg-4">
            <!-- Actividad reciente -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h6 class="mb-0">
                        <i class="fas fa-history me-2 text-info"></i>
                        Actividad Reciente
                    </h6>
                </div>
                <div class="card-body">
                    {% if recent_presentations %}
                        <div class="timeline">
                            {% for presentation in recent_presentations|slice:":5" %}
                            <div class="timeline-item">
                                <div class="timeline-marker 
                                    {% if presentation.status == 'GRADED' %}bg-success
                                    {% elif presentation.status == 'ANALYZED' %}bg-info
                                    {% elif presentation.status == 'PROCESSING' %}bg-warning
                                    {% else %}bg-secondary{% endif %}">
                                    <i class="fas fa-video fa-xs"></i>
                                </div>
                                <div class="timeline-content">
                                    <h6>{{ presentation.title|truncatechars:25 }}</h6>
                                    <p class="text-muted small mb-1">
                                        {{ presentation.student.get_full_name|default:presentation.student.username }}
                                    </p>
                                    <small class="text-muted">{{ presentation.uploaded_at|timesince }} atrás</small>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                        
                        <div class="text-center mt-3">
                            <a href="{% url 'presentations:grade_presentations' %}" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye me-1"></i>Ver todas
                            </a>
                        </div>
                    {% else %}
                        <div class="empty-state">
                            <i class="fas fa-clock"></i>
                            <p>No hay actividad reciente</p>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Métricas de IA -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h6 class="mb-0">
                        <i class="fas fa-robot me-2 text-purple"></i>
                        Análisis de IA
                    </h6>
                </div>
                <div class="card-body">
                    <div class="metric-card">
                        <div class="metric-number text-success">{{ stats.ai_average|floatformat:1 }}%</div>
                        <div class="metric-label">Precisión Promedio IA</div>
                    </div>
                    
                    <div class="row">
                        <div class="col-6">
                            <div class="metric-card">
                                <div class="metric-number text-info">95%</div>
                                <div class="metric-label">Análisis Contenido</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="metric-card">
                                <div class="metric-number text-warning">88%</div>
                                <div class="metric-label">Análisis Fluidez</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Acciones rápidas -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h6 class="mb-0">
                        <i class="fas fa-bolt me-2 text-warning"></i>
                        Acciones Rápidas
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{% url 'presentations:grade_presentations' %}" class="btn btn-outline-warning btn-sm">
                            <i class="fas fa-star me-2"></i>Calificar Pendientes ({{ stats.pending_grading }})
                        </a>
                        <a href="{% url 'presentations:create_assignment' %}" class="btn btn-outline-success btn-sm">
                            <i class="fas fa-plus me-2"></i>Nueva Asignación
                        </a>
                        <a href="{% url 'presentations:manage_courses' %}" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-cog me-2"></i>Gestionar Cursos
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script src="{% static 'js/teacher-reports.js' %}"></script>
{% endblock %}
